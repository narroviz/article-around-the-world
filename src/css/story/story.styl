/* CUSTOM STORY STYLE */
body
	padding max(5vw, 1vw)
	padding-bottom 0em

@font-face
	font-family Avenir

.wrapper
	position relative
	align-items center
	margin-right 0rem
	margin-left 0rem
	display block


#scrolly-side .scrolly
	display flex
	margin-right 0rem
	margin-left 0rem
	background-color transparent
	padding min(5vw, 1rem)

	& > *
		flex 1

	article
		max-width 0rem
		background #0000ff44

		.step-intro
			min-height 50vh
			margin-bottom 3rem
			background-color transparent

		.step-outro
			min-height 50vh
			margin-bottom 0rem
			background-color transparent
			transition background-color 250ms ease-in-out
			&:last-of-type
				margin-bottom 0
			&.is-active
				background-color $secondary
			.row 
				display flex
				max-height 30%

			.large-image
				margin auto
				object-fit contain
				max-height 8rem
				max-width 12rem


			.small-image
				object-fit contain
				margin 2%
				max-width 30%
				max-height 5rem

			p
				margin 0
				font-family Avenir
				color black
			h1
				margin 0
				text-align center
				font-weight 400
				color black
				font-size 24px
				font-family "Avenir"
			h2
				margin 0
				text-align center
				font-weight 400
				color black
				set-type-size(large)

		.step
			min-height 50vh
			margin-bottom 3rem
			background-color transparent
			transition background-color 250ms ease-in-out
			&:last-of-type
				margin-bottom 0
			&.is-active
				background-color $secondary
			
			.row 
				display flex
				max-height 30%

			.large-image
				margin auto
				object-fit contain
				max-height 8rem
				max-width 12rem


			.small-image
				object-fit contain
				margin 2%
				max-width 30%
				max-height 5rem

			p
				margin 0
				font-family Avenir
				color black
			h1
				margin 0
				text-align center
				font-weight 400
				color black
				font-size 24px
				font-family "Avenir"
			h2
				margin 0
				text-align center
				font-weight 400
				color black
				set-type-size(large)
				

	figure.sticky
		position sticky
		background transparent
		height 100%
		margin 0
		top 14vh
		left 0

.interactive-wrapper
	position fixed
	overflow scroll
	right 3rem
	height 100vh
	width 19rem
	pointer-events none

#graphic-wrapper
	width 100%
